{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "app/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}